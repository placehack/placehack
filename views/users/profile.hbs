<div class="container login-wrapper" style="padding: 0 390px;">
  <div class="row">
    <div class="col" style="box-shadow: 0 -15px 15px -10px rgba(0, 0, 0, 0.1); background: white; border-radius: 20px;">
      <div class="our-team">
        <div class="picture">
          <img class="img-fluid" src="https://bit.ly/2PIWQ3K">
        </div>
        <div class="team-content">
          <h3 class="name">{{user.name}}</h3>
          <h4 class="title">{{user.username}}</h4>
          {{!-- <a class="btn btn-primary btn-xl js-scroll-trigger" href="/logout">Logout</a> --}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" style="padding-top: 20px">
  <div class="row">
    <div class="site-section-heading text-center mb-5 w-border col-md-6 mx-auto">
      <h2 class="mb-5">Your favourite Places</h2>
      <p>These are your choices</p>
    </div>
  </div>
</div>


<div class="container" style="display: flex; flex-wrap: wrap; justify-content: space-evenly;">
  {{#each places as |place|}}

      <div class="bcn-card login-wrapper">
          <div class="flip-card" style="margin-bottom: 30px;">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                <img src="{{place.descriptionPhoto}}" style="width:300px;height:300px;">
              </div>
              <div class="flip-card-back">
                <h4 class="h4-card" style="position: relative; display: inline-block; letter-spacing: .2em; text-transform: uppercase; margin: 30px 20px 5px 20px">
                  {{place.name}}</h4>
                  <p style="font-size: 15px; margin-bottom: 20px;">{{place.location.country}}</p>
                  <hr>
                  <p style="font-size: 13px; margin: 20px 20px; text-align:left;">{{place.info.shortDescription}}</p> 
                  <p style="font-size: 13px; margin: 10px 20px; text-align:left;"><strong>Continent:</strong> {{place.location.continent}}</p>
                  <p style="font-size: 13px; margin: 10px 20px; text-align:left;"><strong>Language:</strong> {{place.info.language}}</p> 
                  
                  <p style="font-size: 13px; margin: 10px 20px; text-align:left;"><strong>Expensive</strong> {{place.filters.money}}</p>
              </div>
          </div>
        </div>
      </div>

  {{/each}}
</div>


